@import 'nib'

fontColor = #070707

betterfont()
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale
  text-rendering: optimizeLegibility

shittyfont()
  font-reset()
  -webkit-font-smoothing: none
  -moz-osx-font-smoothing: none
  font-size: 11px
  font-family: Tahoma, Verdana
  color: fontColor
